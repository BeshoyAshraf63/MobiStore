<section class="scroll-section" id="contact">
    <div class="container">
        <h2 class="section-heading">Contact Us</h2>
        <p class="section-sub-heading">We usually reply within a few hours</p>
        <form class="mt-5" id="contact-form">
            <div class="row">
                <div class="col-12 col-lg-6 mb-4">
                    <label for="contactUsName">Name</label>
                    <input type="text" name="contactUsName" id="contactUsName" class="form-control" required>
                </div>
                <div class="col-12 col-lg-6 mb-4">
                    <label for="contactUsPhone">Phone no.</label>
                    <input type="text" name="contactUsPhone" id="contactUsPhone" class="form-control" required>
                </div>
                <div class="col-12 col-lg-6 mb-4">
                    <label for="contactUsEmail">Email</label>
                    <input type="email" name="contactUsEmail" id="contactUsEmail" class="form-control" required>
                </div>
                <div class="col-12 col-lg-6 mb-4">
                    <label for="contactUsSubject">Subject</label>
                    <input type="text" name="contactUsSubject" id="contactUsSubject" class="form-control" required>
                </div>
                <div class="col-12 mb-4">
                    <label for="contactUsMsg">Message</label>
                    <textarea name="contactUsMsg" id="contactUsMsg" class="form-control" rows="5" required></textarea>
                </div>
            </div>
            <div class="text-center mt-5">
                <button type="submit" class="btn btn-primary px-5">Send Message</a>
            </div>
        </form>
    </div>
</section>