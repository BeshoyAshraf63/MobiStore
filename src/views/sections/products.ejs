<section class="scroll-section" id="products">
    <div class="container">
        <h2 class="section-heading">Products</h2>
        <p class="section-sub-heading">Liked any product? Don't hesitate to call us</p>

        <div class="d-flex justify-content-between mb-lg-5 mb-4">
            <h3 class="mb-0">New Products</h3>
            <div class="new-products-swiper-controls">
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
        <div class="swiper-container new-products-swiper mb-5">
            <div class="swiper-wrapper">
                <% for( let index = products.length - 1; index >= 0; index-- ) {
                    if(index < (products.length - 10)) break; 
                    const product = products[index];
                %>
                    <div class="swiper-slide">
                        <div class="product-item">
                            <a href="/products/<%= product.id %>">
                                <img src="/assets/imgs/products/<%= product.img %>" alt="<%= product.name %>" class="img-fluid product-img">
                            </a>
                            <h4 class="product-title"><%= product.name %></h4>
                            <p class="product-price">$<%= product.price %></p>
                            <a href="#" class="btn btn-primary product-add-to-cart" data-product-id="<%= product.id %>">Add To Cart</a>
                        </div>
                    </div>
                <% } %>

            </div>
        </div>
        <div class="d-flex flex-column flex-md-row justify-content-between pt-5 mb-5 align-items-center">
            <h3 class="mb-4 mb-md-0">All Products</h3>
            <div class="d-flex justify-content-lg-end justify-content-center">
                <div class="search-input-wrapper">
                    <input type="text" placeholder="Search all products" id="products-search" class="form-control search-input">
                    <button class="btn search-btn">
                        <img src="/assets/imgs/home/search-icon.svg" alt="search" class="img-fluid">
                    </button>
                </div>
            </div>
        </div>
        <div class="row">
            <% for( let index = 0; index < products.length; index++ ) {
                    const product = products[index];
                %>
                <div class="product-item-wrapper col-12 col-sm-6 col-lg-4 mb-4 <%= index > 5 ? 'hidden' : '' %>" data-id="<%= product.id %>">
                    <div class="product-item">
                        <a href="/products/<%= product.id %>">
                            <img src="/assets/imgs/products/<%= product.img %>" alt="<%= product.name %>" class="img-fluid product-img">
                        </a>
                        <h4 class="product-title"><%= product.name %></h4>
                        <p class="product-price">$<%= product.price %></p>
                        <a href="#" class="btn btn-primary product-add-to-cart" data-product-id="<%= product.id %>">Add To Cart</a>
                    </div>
                </div>
            <% } %>
            
        </div>
        <div class="text-center mt-5 load-more-btn-wrapper">
            <a href="#" id="load-more-btn" class="btn btn-primary px-5 d-block d-sm-inline-block">Load More</a>
        </div>
    </div>
</section>